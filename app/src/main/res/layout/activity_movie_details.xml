<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MovieDetailsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/black"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/favorite"
                        android:id="@+id/btn0"
                        android:layout_gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/favorite"
                        android:id="@+id/btn1"
                        android:layout_gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/favorite"
                        android:id="@+id/btn2"
                        android:layout_gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/favorite"
                        android:id="@+id/btn3"
                        android:layout_gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/favorite"
                        android:id="@+id/btn4"
                        android:layout_gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/favorite"
                        android:id="@+id/btn5"
                        android:layout_gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/favorite"
                        android:id="@+id/btn6"
                        android:layout_gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/favorite"
                        android:id="@+id/btn7"
                        android:layout_gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/favorite"
                        android:id="@+id/btn8"
                        android:layout_gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/favorite"
                        android:id="@+id/btn9"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/details_movie_poster"
                    android:layout_width="match_parent"
                    android:layout_height="601dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/details_movie_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#C8000000"
                        android:fontFamily="@font/architects_daughter"
                        android:padding="25dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="#FAF7F7"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/details_genresTextView"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#C8000000"
                        android:fontFamily="@font/architects_daughter"
                        android:padding="17dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="#FAF7F7"
                        android:textSize="18sp" />

                    <!--<ImageButton-->
                    <!--android:id="@+id/btnAddToWatchlist"-->
                    <!--android:background="@drawable/favorite"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_alignParentRight="true"/>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/details_runtimeTextView"
                                android:layout_width="match_parent"
                                android:layout_height="58dp"
                                android:background="#C8000000"
                                android:fontFamily="@font/architects_daughter"
                                android:padding="20dp"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textColor="#FAF7F7" />

                            <TextView
                                android:id="@+id/details_overviewTextView"
                                android:layout_width="match_parent"
                                android:layout_height="176dp"
                                android:background="#C8000000"
                                android:text="TextView"
                                android:singleLine="false"
                                android:textAlignment="center"
                                android:textColor="#FAF7F7" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btnWatched"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#C9C2C2"
                                    android:text="Add to Watched" />

                                <Button
                                    android:id="@+id/btnWatchlist"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#C9C2C2"
                                    android:text="Add To Watchlist" />
                            </LinearLayout>




                        </LinearLayout>

                    </LinearLayout>


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical" />
                    </HorizontalScrollView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</RelativeLayout>